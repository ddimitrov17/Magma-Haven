        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="" value="{{volcano.name}}">
                    <label>Location:</label>
                    <input type="text" id="location" name="" value="{{volcano.location}}">
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="" value="{{volcano.elevation}}">
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="" value="{{volcano.lastErruption}}">
                    <label>Image:</label>
                    <input type="text" id="image" name=""
                        value="{{volcano.image}}">
                    <label>Volcano Type:</label>
                    <select id="type" name="">
                        {{#each volcanoTypes}}
                        <option value="{{this}}" {{#if (eq this ../volcano.type)}}selected{{/if}}>{{this}}</option>
                        {{/each}}
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="" placeholder="...">{{volcano.description}}</textarea>
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
    </main>
